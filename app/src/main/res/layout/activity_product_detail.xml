<?xml version="1.0" encoding="utf-8"?>
<com.loopeer.compatinset.InsetLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/TunerText.Title"
        android:text="@string/product_detail_label"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/img_product"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/large_padding"
        android:layout_marginRight="@dimen/large_padding"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        fresco:placeholderImage="@color/window_background_gray"/>

    <TextView
        android:layout_marginTop="@dimen/large_padding"
        style="@style/TunerText.Primary"
        android:layout_marginLeft="32dp"
        android:padding="8dp"
        android:text="Detail 1: ******"/>

    <TextView
        style="@style/TunerText.Primary"
        android:layout_marginLeft="32dp"
        android:padding="8dp"
        android:text="Detail 2: ******"/>

    <TextView
        style="@style/TunerText.Primary"
        android:layout_marginLeft="32dp"
        android:padding="8dp"
        android:text="Detail 3: ******"/>

</com.loopeer.compatinset.InsetLinearLayout>